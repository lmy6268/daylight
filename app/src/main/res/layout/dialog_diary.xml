<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img101"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/imgy1"
            android:layout_margin="20dp"/>



    </LinearLayout>
    <!--메뉴 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/imageicon" />

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btnBgm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/musicicon" />

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/saveicon" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/btnEmo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"/>
        <TextView
           android:layout_margin="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 : " />
    </LinearLayout>
    <!--일기 작성화면-->
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCCC"
        android:layout_weight="10">

        <EditText
            android:id="@+id/editDiary"
            android:gravity="top|left"
            android:hint="이곳에 일기를 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!---->
</LinearLayout>